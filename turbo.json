{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "generate"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "cache": false,
      "outputs": ["src/gqlTypes.ts", "src/schema.ts", "schema/schema.gql", "src/generated-graphql/**"]
    },
    "generate:ci": {
      "cache": false,
      "outputs": ["src/gqlTypes.ts", "src/schema.ts", "schema/schema.gql"]
    },
    "type-check": {
      "dependsOn": ["^type-check", "generate"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "format": {
      "cache": false
    },
    "deploy:dev": {
      "dependsOn": ["build"],
      "cache": false
    },
    "deploy:prod": {
      "dependsOn": ["build"],
      "cache": false
    },
    "d1:migrations:apply": {
      "cache": false
    },
    "d1:migrations:apply:remote": {
      "cache": false
    }
  }
}
